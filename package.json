{
  "name": "demo-graphql-api",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18.12.0"
  },
  "exports": "./dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon --watch './**/*.ts' --exec 'NODE_ENV=DEVELOP ts-node' src/app.ts",
    "build": "rm -rf dist && tsc",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "prettier": "prettier --config-precedence prefer-file -c '**/*.{tsx,ts,js,jsx,json,graphql,scss,yml}'",
    "prettier:fix": "prettier --write --config-precedence prefer-file -c '**/*.{tsx,ts,js,jsx,json,graphql,scss,yml}'",
    "lint": "eslint 'src/**/*.{ts,graphql}' --cache",
    "lint:fix": "eslint 'src/**/*.{ts,graphql}' --fix",
    "migration:create": "ts-node src/migrations/scripts/create.ts",
    "migration:up": "ts-node src/migrations/scripts/up.ts",
    "migration:down": "ts-node src/migrations/scripts/down.ts",
    "seed:up": "ts-node src/testing/seed/scripts/seed.ts"
  },
  "dependencies": {
    "@debugr/console": "^3.0.0-rc.10",
    "@debugr/core": "^3.0.0-rc.12",
    "@debugr/elastic": "^3.0.0-rc.10",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.14.0",
    "@mikro-orm/cli": "^6.1.9",
    "@mikro-orm/core": "^6.1.9",
    "@mikro-orm/migrations": "^6.1.9",
    "@mikro-orm/reflection": "^6.1.9",
    "@mikro-orm/seeder": "^6.1.9",
    "@mikro-orm/sqlite": "^6.1.9",
    "class-validator": "0.14.1",
    "dayjs": "^1.11.10",
    "dotenv-safe": "9.1.0",
    "fastify": "^4.26.2",
    "graphql": "^16.8.1",
    "graphql-fields-to-relations": "^1.0.5",
    "graphql-scalars": "^1.22.5",
    "mercurius": "^13.4.0",
    "reflect-metadata": "^0.2.1",
    "type-graphql": "^2.0.0-beta.6",
    "typedi": "0.10.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/dotenv-safe": "8.1.6",
    "@types/node": "20.11.25",
    "@types/prettier": "2.7.3",
    "@types/uuid": "^9.0.8",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "nodemon": "3.1.0",
    "prettier": "3.2.5",
    "ts-node": "10.9.2",
    "typescript": "^5.4.2",
    "typescript-eslint": "^7.1.1"
  }
}
